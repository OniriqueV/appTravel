<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_a" />

        <!-- Add Photo Button -->
        <FrameLayout
            android:id="@+id/layoutAddPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/add_photo_background"
            android:visibility="gone">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_add"
                app:tint="#D4A574" />

        </FrameLayout>

        <!-- Delete Button - Top Right Corner -->
        <ImageButton
            android:id="@+id/btnDeletePhoto"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|end"
            android:layout_margin="4dp"
            android:background="@drawable/bg_delete_photo"
            android:src="@drawable/ic_close"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:contentDescription="Delete photo"
            android:visibility="gone"
            app:tint="#FFFFFF" />

    </FrameLayout>

</androidx.cardview.widget.CardView>
