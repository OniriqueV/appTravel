<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- File Icon -->
        <ImageView
            android:id="@+id/ivFileIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_document"
            app:tint="#FF6B35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- File Info -->
        <LinearLayout
            android:id="@+id/layoutFileInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toEndOf="@id/ivFileIcon"
            app:layout_constraintEnd_toStartOf="@id/btnDelete"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Document Title -->
            <TextView
                android:id="@+id/tvDocumentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vé máy bay Hà Nội - Sài Gòn"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- File Name (smaller, below title) -->
            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="document_file.pdf"
                android:textSize="11sp"
                android:textColor="#999999"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="middle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vé máy bay"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_category_tag"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

                <TextView
                    android:id="@+id/tvFileSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5 MB"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/01/2024"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="4dp" />

            <!-- Description (if available) -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ghi chú: ..."
                android:textSize="11sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Delete Button -->
        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_delete"
            android:padding="4dp"
            app:tint="#FF6B35"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>