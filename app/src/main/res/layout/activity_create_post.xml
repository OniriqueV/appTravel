<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="10dp"/>

        <!-- Content -->
        <EditText
            android:id="@+id/edtContent"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Nội dung"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="10dp"/>

        <!-- Tags -->
        <EditText
            android:id="@+id/edtTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tags (vd: beach, food, sunset)"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="10dp"/>

        <!-- Trip select -->
        <TextView
            android:id="@+id/tvSelectedTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chưa chọn chuyến đi"
            android:padding="10dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnSelectTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn chuyến đi (tuỳ chọn)"
            android:textAllCaps="false"/>

        <!-- Pick images -->
        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"/>

        <!-- Preview list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerImages"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:overScrollMode="never" />

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progressCreatePost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <!-- Submit -->
        <Button
            android:id="@+id/btnPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng bài"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:backgroundTint="#D4A056"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
