<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Trip Image Full Width -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvTripImage"
            android:layout_width="0dp"
            android:layout_height="240dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivCurrentTripImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_a" />

        </androidx.cardview.widget.CardView>
        
        <!-- Warning Badge - top left for conflicting trips -->
        <ImageView
            android:id="@+id/ivCurrentTripWarningBadge"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:src="@drawable/ic_warning"
            android:contentDescription="Trip conflict warning"
            app:layout_constraintTop_toTopOf="@id/cvTripImage"
            app:layout_constraintStart_toStartOf="@id/cvTripImage" />

        <!-- LIVE Badge - top right -->
        <LinearLayout
            android:id="@+id/liveBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_live_badge"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:gravity="center_vertical"
            android:visibility="visible"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/cvTripImage"
            app:layout_constraintEnd_toEndOf="@id/cvTripImage">

            <View
                android:id="@+id/badgeDot"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_live_dot" />

            <TextView
                android:id="@+id/tvBadgeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE"
                android:textColor="#EF4444"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="@id/cvTripImage"
            app:layout_constraintStart_toStartOf="@id/cvTripImage">

            <!-- Trip Name -->
            <TextView
                android:id="@+id/tvCurrentTripName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nha Trang Escape"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="6" />

            <!-- Day Progress -->
            <TextView
                android:id="@+id/tvDayProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day 3 of 5"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_marginTop="4dp"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="6" />


            <!-- Plans Count -->
            <LinearLayout
                android:id="@+id/layoutPlanCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_plan"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/tvPlansCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="12 plans"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:shadowColor="#80000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="6" />
            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
